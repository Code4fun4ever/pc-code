<?xml version="1.0"?>
<project name="binary-code">
  <property name="dir.src" value="${basedir}" />
  <property name="dir.bin" value="${basedir}" />

  <path id="cp">
    <pathelement path="${basedir}" />
  </path>

  <target name="compile">
    <javac srcdir="${dir.src}" destdir="${dir.bin}" includeAntRuntime="false">
      <classpath refid="cp" />
    </javac>
  </target>

  <target name="test" depends="compile">
    <junit printsummary="yes">
      <formatter type="plain" />
      <classpath refid="cp" />
      <test name="TestBinaryCode" />
    </junit>
  </target>
</project>
